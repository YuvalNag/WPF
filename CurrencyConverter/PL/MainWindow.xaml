<Custom:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
    xmlns:VM="clr-namespace:PL.ViewModels"
      xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:UserControls="clr-namespace:PL.UserControls" x:Class="PL.MainWindow"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"    
    mc:Ignorable="d"
        Title="MainWindow" MaxHeight="1000" MaxWidth="850">
    <Window.DataContext >
        <VM:MainVM></VM:MainVM>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="switch" Command="{Binding switchCommand}" HorizontalAlignment="Right" />
        <syncfusion:Carousel Grid.Row="1" RadiusX="350" RadiusY="0" RotationSpeed="300">
            <syncfusion:CarouselItem>
                <UserControls:HistoryUC Height="850" Width="850"/>
            </syncfusion:CarouselItem>
            <syncfusion:CarouselItem IsSelected="{Binding isRTView}">
                <UserControls:CountriesListUC Height="850" Width="850"/>
            </syncfusion:CarouselItem>

        </syncfusion:Carousel>
    </Grid>
</Custom:MetroWindow>
