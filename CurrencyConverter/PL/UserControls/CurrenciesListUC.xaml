<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL.UserControls"
             
             xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:Converters="clr-namespace:PL.Converters"
    x:Class="PL.UserControls.CountriesListUC"
             mc:Ignorable="d" 
             d:DesignHeight="270" d:DesignWidth="300" MinWidth="300" MinHeight="270">
    <UserControl.Resources>
        <Converters:CountryCodeToImgSourceConverter x:Key="CountryCodeToImgSourceConverter" />
        <Converters:DirectionToBackgroundConverter x:Key="DirectionToBackgroundConverter" />
        <Converters:ConvertValuse x:Key="ConvertValuse"/>
        <Converters:IssuedCountryCodeToCountrySymbolConverter x:Key="IssuedCountryCodeToCountrySymbolConverter"/>



        <Style TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <DataTemplate x:Key="CurrencyComboBoxItem">
            <Grid Background="#8C008000" Width="150" Height="50">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>
                <Image Grid.RowSpan="2" Source="/PL;component/Assets/united-states-of-america.png" Stretch="UniformToFill" AutomationProperties.LabeledBy="{Binding Text, ElementName=textBlock}" Margin="5" />
                <TextBlock  Text="{Binding IssuedCountryCode }" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12" Margin="5,0,0,0"  />
                <TextBlock Text="{Binding IssuedCountryName }" Grid.Row="1"   HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="12" Grid.Column="1" Margin="5,0,0,0" />

            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="CurrencyItem">

            <Grid  Background="{Binding Direction, Converter={StaticResource DirectionToBackgroundConverter} }"  Width="200" Height="85">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="/PL;component/Assets/united-states-of-america.png" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock  Grid.Column="1"  Grid.ColumnSpan="2" VerticalAlignment="Center"  TextWrapping="Wrap" HorizontalAlignment="Stretch" FontSize="20"  >
                    <Run  FontWeight="Bold" Text="{Binding IssuedCountryCode, Converter={StaticResource IssuedCountryCodeToCountrySymbolConverter} }" />
                    <Run>
                        <Run.Text>
                             <MultiBinding  Converter="{StaticResource ConvertValuse}" Mode="OneWay">
                                <Binding   />
                                <Binding  RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type ListView}}" Path="SelectedItem" />
                            </MultiBinding>
                        </Run.Text>
                    </Run>
                </TextBlock>

                <TextBlock  Grid.ColumnSpan="3" Grid.Row="1" TextWrapping="Wrap"  Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">
                   
                        <Run Text="{Binding IssuedCountryCode }" />
                   <Run Text="-" />
                    <Run Text="{Binding IssuedCountryName }" />


                </TextBlock>

            </Grid>

        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/PL;component/Assets/TileBackground.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Background="{StaticResource {x:Static SystemColors.ActiveCaptionBrushKey}}"
                 Grid.Row="0"  
                 Text="{Binding FilterString, Mode=OneWayToSource,UpdateSourceTrigger=PropertyChanged}" 
                 Custom:TextBoxHelper.UseFloatingWatermark="True"  
                 Custom:TextBoxHelper.Watermark="search"
                 HorizontalAlignment="Stretch"/>

        <ListView x:Name="list" Background="Transparent" 
                  Grid.Row="2" 
                 ItemTemplate="{StaticResource CurrencyItem}" 
                 ItemsSource="{Binding currenciesList, IsAsync=True}"
                   HorizontalAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                   VerticalAlignment="Stretch">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>


                    <WrapPanel Orientation="Horizontal" Background="Transparent" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
        <ComboBox ItemsSource="{Binding currenciesList, IsAsync=True}" 
                  HorizontalAlignment="Left" 
                  Margin="10,5,0,0" 
                  Grid.Row="1" 
                  
                  SelectedItem="{Binding ElementName=list,Path=SelectedItem}"
                  VerticalAlignment="Top"
                  ItemTemplate="{StaticResource CurrencyComboBoxItem}"
                  SelectedIndex="0" 
                  Cursor="Hand" 
                  ScrollViewer.CanContentScroll="True"
                  
                  Custom:TextBoxHelper.Watermark="choose the relative currency" 
                  Custom:TextBoxHelper.UseFloatingWatermark="True" Background="{StaticResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
            <ComboBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" 
                             Orientation="Vertical"
                             />
                </ItemsPanelTemplate>
            </ComboBox.ItemsPanel>
        </ComboBox>
    </Grid>
</UserControl>
